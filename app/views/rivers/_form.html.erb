<%= form_for @river, :html => { :class => "form-horizontal river" } do |f| %>

    <% if @river.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@river.errors.count, "error") %> prohibited this river from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @river.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :mm_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mm_name, :class => 'form-control' %>
    </div>
    <%= error_span(@river[:mm_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :en_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :en_name, :class => 'form-control' %>
    </div>
    <%= error_span(@river[:en_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            rivers_path, :class => 'btn btn-default' %>

<% end %>
