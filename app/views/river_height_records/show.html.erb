<%- model_class = RiverHeightRecord -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @river_height_record.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:river_id) %>:</strong></dt>
  <dd><%= @river_height_record.river_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:record_time) %>:</strong></dt>
  <dd><%= @river_height_record.record_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @river_height_record.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:feet_above) %>:</strong></dt>
  <dd><%= @river_height_record.feet_above %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prediction) %>:</strong></dt>
  <dd><%= @river_height_record.prediction %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              river_height_records_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_river_height_record_path(@river_height_record), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              river_height_record_path(@river_height_record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
